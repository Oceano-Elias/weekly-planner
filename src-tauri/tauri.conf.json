{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Weekly Planner",
    "version": "1.0.0",
    "identifier": "com.weeklyplanner.app",
    "build": {
        "frontendDist": "../dist",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "Weekly Planner",
                "width": 1400,
                "height": 900,
                "minWidth": 1200,
                "minHeight": 700,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "dragDropEnabled": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "category": "Productivity",
        "shortDescription": "Hierarchical Task Management",
        "longDescription": "A beautiful, offline-capable weekly planner with hierarchical task management, focus mode, and analytics.",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
