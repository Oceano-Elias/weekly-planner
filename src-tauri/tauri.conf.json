{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Weekly Planner",
    "version": "3.2.0",
    "identifier": "com.weeklyplanner.app",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:5174",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "Weekly Planner",
                "width": 1400,
                "height": 900,
                "minWidth": 1200,
                "minHeight": 700,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "dragDropEnabled": false
            },
            {
                "label": "focus-pip",
                "url": "index.html?mode=pip",
                "title": "Focus Timer",
                "width": 160,
                "height": 190,
                "resizable": false,
                "decorations": false,
                "fullscreen": false,
                "center": false,
                "alwaysOnTop": true,
                "visible": false,
                "skipTaskbar": true,
                "transparent": true
            }
        ],
        "macOSPrivateApi": true,
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "category": "Productivity",
        "shortDescription": "Hierarchical Task Management",
        "longDescription": "A beautiful, offline-capable weekly planner with hierarchical task management, focus mode, and analytics.",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}